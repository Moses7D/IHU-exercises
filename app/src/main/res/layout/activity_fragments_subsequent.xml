<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".set01.FragmentsSubsequentActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorActivity01"
        android:padding="30dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/subFragsMainA"
            android:textSize="30dp"
            android:textStyle="bold|italic"
            android:gravity="center"/>

        <fragment
            android:id="@+id/fragCont"
            android:name="com.androidexercises.ihuexercises.set01.FragmentsSubsequentMainFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>